<h1> <%= @recipe.product.name_product %> </h1>

<table style="width:80%">
  <tr>
    <th>Ingredient</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% @recipe.ingredient_recipes.each do |ingredient| %>
    <tr>
      <th> <%= ingredient.ingredient.name_ingredient %> </th>
      <th> <%= ingredient.quantity_recipe %> </th>
      <th> <%= (ingredient.ingredient.last_price * ingredient.quantity_recipe) %> </th>
    </tr>
  <% end %>
  <% @recipe.subproduct_recipes.each do |subproduct| %>
  <tr>
    <th> <%= subproduct.product.name_product %> </th>
    <th> <%= subproduct.quantity_recipe %> </th>
    <th> <%= subproduct.product.recipe.total_price %> </th>
  </tr>
  <% end %>
  <tr>
    <th>Total price</th>
    <th></th>
    <th> <%= @recipe.total_price %> </th>
  </tr>
</table>