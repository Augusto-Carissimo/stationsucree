<h1>Locations</h1>

<% @locations.each do |location| %>
  <table style="width:50%">
    <h1>
      <%= link_to location.name_location, location_path(location), class: "nav-link" %>
    </h1>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Transfer from Lab</th>
    </tr>
    <% location.stock_per_locations.each do |stock_per_location| %>
      <tr>
        <td>
          <%= stock_per_location.product.name_product %>
        </td>
        <td>
          <%= stock_per_location.quantity_stock %>
        </td>
        <td>
          <%= form_with(model: stock_per_location,  local:true) do |form| %>
            <p>
              <%= form.number_field :quantity_stock, :value => 0 %> <%= form.submit 'Transfer'%>
            </p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<br>
<button> <%= link_to "New location", new_location_path, class: "nav-link" %> </button>