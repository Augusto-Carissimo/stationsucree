<h1>Add new product</h1>

<% if @product.errors.any? %>
  <h2> Errors occured</h2>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @product,  local:true) do |form| %>
  <p>
    <%= form.label 'Product name' %><br/>
    <%= form.text_field :name_product %><br/>
  </p>

  <p>
    <%= form.label :quantity_product %><br/>
    <%= form.text_field :quantity_product %><br/>
  </p>

  <p>
    <%= form.label :recipe_text %><br/>
    <%= form.text_field :recipe_text %><br/>
  </p>

  <p>
    <%= form.label 'Is a subproduct?' %><br/>
    <%= form.check_box :is_subproduct %><br/>
  </p>

  <p>
    <%= form.submit 'Add new product' %>
  </p>
<% end %>