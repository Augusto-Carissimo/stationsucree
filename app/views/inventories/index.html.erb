<h1>Inventory</h1>

  <table style="width:50%">
    <tr>
      <th>Ingredient</th>
      <th>Quantity</th>
      <th>Update inventory</th>
      <th>Actions</th>
    </tr>
    <% @inventories.each do |inventory| %>
      <tr>
        <td>
          <%= link_to inventory.ingredient.name_ingredient, ingredient_path(inventory.ingredient), class: "nav-link" %>
        </td>
        <td> <%= inventory.quantity_inventory %> </td>
        <td>
          <%= form_with(model: inventory,  local:true) do |form| %>
            <p>
              <%= form.number_field :quantity_inventory, :step => "0.1", :value => 0 %> <%= form.submit%>
            </p>
          <% end %>
        </td>
        <td>
          <%= button_to 'Delete', ingredient_path(inventory.ingredient), method: :delete, form: {
            data: { turbo_confirm: 'Are you sure?' } } %>
        </td>
        <td>
          <%= button_to 'Edit', edit_ingredient_path(inventory.ingredient), method: :get  %>
        </td>
      </tr>
    <% end %>
  </table>
<br>
<button> <%= link_to "New ingredient", new_ingredient_path, class: "nav-link" %> </button>