<h1>Inventory</h1>


<% @inventories.each do |inventory| %>
  <table style="width:50%">
    <tr>
      <th>Ingredient</th>
      <th>Quantity</th>
      <th>Update inventory</th>
    </tr>
    <tr>
      <td> <%= inventory.ingredient.name_ingredient %> </td>
      <td> <%= inventory.quantity %> </td>
      <td>
        <%= form_with(model: inventory,  local:true) do |form| %>
          <p>
            <%= form.number_field :quantity %> <%= form.submit%>
          </p>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>