<h1>Add new ingredient</h1>

<% if @ingredient.errors.any? %>
  <h2> Errors occured</h2>
  <ul>
    <% @ingredient.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @ingredient,  local:true) do |form| %>
  <p>
    <%= form.label 'Ingredient name' %><br/>
    <%= form.text_field :name_ingredient %><br/>
  </p>

  <p>
    <%= form.label :last_price %><br/>
    <%= form.number_field :last_price, :step => "0.001" %><br/>
  </p>

  <p>
    <%= form.label :unit %><br/>
    <%= form.text_field :unit %><br/>
  </p>

  <p>
    <%= form.label :quantity_per_unit %><br/>
    <%= form.number_field :quantity_per_unit, :step => "0.001" %><br/>
  </p>

  <p>
    <%= form.submit 'Add new ingredient' %>
  </p>
<% end %>